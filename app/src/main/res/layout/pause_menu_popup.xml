<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/pause_menu_background"
    android:padding="20dp"
    android:elevation="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PAUSE MENU"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Tiếp tục"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/button_pause_menu"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btnRestart"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Chơi lại"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/button_pause_menu"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btnMainMenu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Quay lại"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/button_pause_menu"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nhạc nền:"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center_vertical" />

        <Switch
            android:id="@+id/switchBackgroundMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hiệu ứng âm thanh:"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center_vertical" />

        <Switch
            android:id="@+id/switchSoundEffects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

    </LinearLayout>

</LinearLayout>
